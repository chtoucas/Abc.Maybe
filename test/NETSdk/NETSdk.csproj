<Project Sdk="Microsoft.NET.Sdk">

  <!--
    Prerequesite: .NET Framework Developer Pack or Targeting Pack, the later
    should suffice.
    A very simple way to see what works and what does not is to compile this
    project with /p:AllKnown=true.
    https://docs.microsoft.com/en-us/dotnet/framework/install/guide-for-developers
    https://docs.microsoft.com/en-us/dotnet/framework/migration-guide/how-to-determine-which-versions-are-installed

    You should not set both "NoClassic" and "NoCore" to "true".
  -->

  <PropertyGroup>
    <AllKnown>false</AllKnown>
    <NoClassic>false</NoClassic>
    <NoCore>false</NoCore>
  </PropertyGroup>

  <PropertyGroup Condition=" $(AllKnown) == 'true' ">
    <TargetFrameworks Condition=" $(NoClassic) != 'true' ">$(MaxClassicPlatforms)</TargetFrameworks>
    <TargetFrameworks Condition=" $(NoCore) != 'true' ">$(TargetFrameworks);$(MaxCorePlatforms)</TargetFrameworks>
  </PropertyGroup>

  <PropertyGroup Condition=" $(AllKnown) != 'true' ">
    <TargetFrameworks Condition=" $(NoClassic) != 'true' ">$(MinClassicPlatforms)</TargetFrameworks>
    <TargetFrameworks Condition=" $(NoCore) != 'true' ">$(TargetFrameworks);$(MinCorePlatforms)</TargetFrameworks>
  </PropertyGroup>

</Project>
