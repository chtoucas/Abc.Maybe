<Project Sdk="Microsoft.NET.Sdk">

  <!--
    Prerequesite: .NET Framework Developer Pack or Targeting Pack.
    The Targeting Pack should be sufficient.
    https://docs.microsoft.com/en-us/dotnet/framework/install/guide-for-developers
    https://docs.microsoft.com/en-us/dotnet/framework/migration-guide/how-to-determine-which-versions-are-installed
  -->

  <PropertyGroup Condition=" $(__Max) == 'true' ">
    <__NETClassicTargets Condition=" $(__CoreOnly) != 'true' ">net452;net46;net461;net462;net47;net471;net472;net48</__NETClassicTargets>
    <__NETCoreTargets Condition=" $(__ClassicOnly) != 'true' ">netcoreapp2.0;netcoreapp2.1;netcoreapp2.2;netcoreapp3.0;netcoreapp3.1</__NETCoreTargets>
  </PropertyGroup>

  <PropertyGroup Condition=" $(__Max) != 'true' ">
    <__NETClassicTargets Condition=" $(__CoreOnly) != 'true' ">net452;net462;net472;net48</__NETClassicTargets>
    <__NETCoreTargets Condition=" $(__ClassicOnly) != 'true' ">netcoreapp2.2;netcoreapp3.1</__NETCoreTargets>
  </PropertyGroup>

  <PropertyGroup>
    <TargetFrameworks>$(__NETClassicTargets);$(__NETCoreTargets)</TargetFrameworks>
  </PropertyGroup>

</Project>
