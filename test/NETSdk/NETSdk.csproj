<Project Sdk="Microsoft.NET.Sdk">

  <!--
    Unlisted SDKs: net47, net471 and net48.
    https://docs.microsoft.com/en-us/dotnet/standard/net-standard
    https://dotnet.microsoft.com/platform/dotnet-standard
  -->

  <PropertyGroup Condition=" $(__Max) == 'true' ">
    <__NETClassicTargets Condition=" $(__CoreOnly) != 'true' ">net452;net46;net461;net462;net472</__NETClassicTargets>
    <__NETCoreTargets Condition=" $(__ClassicOnly) != 'true' ">netcoreapp2.0;netcoreapp2.1;netcoreapp2.2;netcoreapp3.0;netcoreapp3.1</__NETCoreTargets>
  </PropertyGroup>

  <PropertyGroup Condition=" $(__Max) != 'true' ">
    <__NETClassicTargets Condition=" $(__CoreOnly) != 'true' ">net452;net462;net472</__NETClassicTargets>
    <__NETCoreTargets Condition=" $(__ClassicOnly) != 'true' ">netcoreapp2.2;netcoreapp3.1</__NETCoreTargets>
  </PropertyGroup>

  <PropertyGroup>
    <TargetFrameworks>$(__NETClassicTargets);$(__NETCoreTargets)</TargetFrameworks>
  </PropertyGroup>

</Project>
