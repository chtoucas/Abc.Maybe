<Project Sdk="Microsoft.NET.Sdk">

  <!--
    Prerequesite: .NET Framework Developer Pack or Targeting Pack, the later
    should suffice.
    A very simple way to see what works and what does not is to compile this
    project with /p:AllKnown=true.
    https://docs.microsoft.com/en-us/dotnet/framework/install/guide-for-developers
    https://docs.microsoft.com/en-us/dotnet/framework/migration-guide/how-to-determine-which-versions-are-installed
  -->

  <PropertyGroup Condition=" '$(ContinuousIntegrationBuild)' != 'true' ">
    <TargetFrameworks>$(MinCorePlatforms);$(MinClassicPlatforms)</TargetFrameworks>
    <TargetFrameworks Condition=" '$(AllKnown)' == 'true' ">
      $(MaxCorePlatforms);$(MaxClassicPlatforms);
      $(NotSupportedTestPlatforms)
    </TargetFrameworks>
  </PropertyGroup>

  <!-- Azure DevOps: we ignore Mono -->
  <PropertyGroup Condition=" '$(ContinuousIntegrationBuild)' == 'true' ">
    <TargetFrameworks Condition=" '$(OS)' == 'Windows_NT' ">$(MinCorePlatforms);$(MinClassicPlatforms)</TargetFrameworks>
    <TargetFrameworks Condition=" '$(OS)' != 'Windows_NT' ">$(MinCorePlatforms)</TargetFrameworks>
  </PropertyGroup>

</Project>
