<Project Sdk="Microsoft.NET.Sdk">

  <!--
    Prerequesite: .NET Framework Developer Pack or Targeting Pack, the later
    should suffice.
    A very simple way to see what works and what does not is to compile this
    project with /p:AllKnown=true.
    https://docs.microsoft.com/en-us/dotnet/framework/install/guide-for-developers
    https://docs.microsoft.com/en-us/dotnet/framework/migration-guide/how-to-determine-which-versions-are-installed
  -->

  <Import Project="..\AbcVersion.props" />

  <PropertyGroup>
    <IsPackable>false</IsPackable>
    <Configuration>Release</Configuration>
    <DebugType>none</DebugType>
    <GenerateAssemblyInfo>false</GenerateAssemblyInfo>
  </PropertyGroup>

  <PropertyGroup Condition=" $(NET45x) != 'true' ">
    <TargetFrameworks Condition=" $(AllKnown) == 'true' ">$(MaxClassicPlatforms);$(MaxCorePlatforms)</TargetFrameworks>
    <TargetFrameworks Condition=" $(AllKnown) != 'true' ">$(MinClassicPlatforms);$(MinCorePlatforms)</TargetFrameworks>
  </PropertyGroup>

  <PropertyGroup Condition=" $(NET45x) == 'true' ">
    <TargetFrameworks>$(NET45xPlatforms)</TargetFrameworks>
  </PropertyGroup>

  <!-- Source files -->
  <PropertyGroup>
    <SourceRoot>..\..\src\</SourceRoot>

    <FilesToExclude>$(SourceRoot)**\AssemblyInfo.cs</FilesToExclude>
    <FilesToExclude>$(FilesToExclude);$(SourceRoot)**\bin\**\*.*</FilesToExclude>
    <FilesToExclude>$(FilesToExclude);$(SourceRoot)**\obj\**\*.*</FilesToExclude>
  </PropertyGroup>
  <ItemGroup>
    <!--<Compile Include="AssemblyInfo.cs" />
    <Compile Include="HashCode.Shim.cs" />-->
    <Compile Include="$(SourceRoot)Abc.Sketches\**\*.cs" Exclude="$(FilesToExclude)" />
    <Compile Include="$(SourceRoot)Abc.Testing\**\*.cs" Exclude="$(FilesToExclude)" />
    <Compile Include="$(SourceRoot)Abc.Tests\**\*.cs" Exclude="$(FilesToExclude)" />
  </ItemGroup>

  <!-- Dependencies -->
  <!-- Microsoft.Bcl.HashCode is not compatible w/ .NET Framework <= 4.6 -->
  <PropertyGroup>
    <HashCodePackage>true</HashCodePackage>
    <HashCodePackage Condition=" $(TargetFramework.StartsWith('net45')) ">false</HashCodePackage>
    <HashCodePackage Condition=" $(TargetFramework) == 'net46' ">false</HashCodePackage>
  </PropertyGroup>
  <ItemGroup>
    <PackageReference Include="Abc.Maybe" Version="$(AbcVersion)" />
    <PackageReference Include="Microsoft.Bcl.HashCode" Version="1.1.0"
                      Condition=" $(HashCodePackage) == 'true' " />
    <PackageReference Include="System.ValueTuple" Version="4.5.0" />
    <PackageReference Include="xunit" Version="2.4.1" />
    <!-- For .NET Framework 4.5/4.5.1, we use xunit.runner.console; see "eng\NETFrameworkTools" -->
    <PackageReference Include="xunit.runner.visualstudio" Version="2.4.1">
      <PrivateAssets>all</PrivateAssets>
      <IncludeAssets>runtime; build; native; contentfiles; analyzers; buildtransitive</IncludeAssets>
    </PackageReference>
  </ItemGroup>

</Project>
