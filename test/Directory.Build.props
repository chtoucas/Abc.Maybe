<Project>

  <PropertyGroup>
    <SourceRoot>$(MSBuildThisFileDirectory)..\src\</SourceRoot>
  </PropertyGroup>

  <PropertyGroup>
    <Authors>Chtoucas</Authors>
    <Company>Narvalo.Org</Company>
    <Product>Abécédaire Library</Product>
    <Copyright>Copyright (c) 2019 Narvalo.Org</Copyright>
    <Title>A Safe Yet Effective Option Type.</Title>
    <AssemblyTitle>$(Title)</AssemblyTitle>
    <Description>$(Title) Built [$([System.DateTime]::UtcNow.ToString("r"))].</Description>

    <LangVersion>latest</LangVersion>
    <CheckForOverflowUnderflow>true</CheckForOverflowUnderflow>
    <Nullable>enable</Nullable>
    <TreatWarningsAsErrors>true</TreatWarningsAsErrors>

    <DefineConstants>$(DefineConstants);TRACE;CONTRACTS_FULL</DefineConstants>

    <VersionPrefix>1.0.0</VersionPrefix>
    <VersionSuffix>DUMMY</VersionSuffix>
  </PropertyGroup>

  <PropertyGroup Condition=" $(Configuration) == 'Debug' ">
    <DefineConstants>$(DefineConstants);DEBUG</DefineConstants>

    <TreatWarningsAsErrors>false</TreatWarningsAsErrors>
    <TreatSpecificWarningsAsErrors />
  </PropertyGroup>

</Project>
