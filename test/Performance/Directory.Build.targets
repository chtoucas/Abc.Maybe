<Project>

  <!--
    Command-line option: "Live", default value:
    - Within VS, Live = true, ie use the project Abc.Maybe.
    - Outside VS, Live = false, ie use the package Abc.Maybe.
  -->
  <PropertyGroup>
    <Live>false</Live>
    <Live Condition=" $(BuildingInsideVisualStudio) == 'true' ">true</Live>

    <ParentDBTargets Condition=" $(Live) == 'true' ">..\..\Directory.Build.targets</ParentDBTargets>
    <ParentDBTargets Condition=" $(Live) != 'true' ">..\Directory.Build.targets</ParentDBTargets>
  </PropertyGroup>

  <Import Project="$(MSBuildThisFileDirectory)$(ParentDBTargets)" />

  <ItemGroup Condition=" $(Live) == 'true' ">
    <ProjectReference Include="$(SourceRoot)Abc.Maybe\Abc.Maybe.csproj" />
  </ItemGroup>

</Project>
