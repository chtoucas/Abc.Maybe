<Project>

  <!-- Old style project files, we must set a few things manually -->
  <PropertyGroup Condition=" $(TargetFrameworkVersion) == 'v4.5' ">
    <TargetFramework>net45</TargetFramework>
    <DefineConstants>$(DefineConstants);NETFRAMEWORK;NET45</DefineConstants>
  </PropertyGroup>
  <PropertyGroup Condition=" $(TargetFrameworkVersion) == 'v4.5.1' ">
    <TargetFramework>net451</TargetFramework>
    <DefineConstants>$(DefineConstants);NETFRAMEWORK;NET451</DefineConstants>
  </PropertyGroup>

  <PropertyGroup Condition=" $(TargetFramework.StartsWith('netcoreapp2.')) ">
    <DefineConstants>$(DefineConstants);NETCOREAPP2_x</DefineConstants>
  </PropertyGroup>

  <!-- Source files -->
  <PropertyGroup>
    <FilesToExclude>$(SourceRoot)**\AssemblyInfo.cs</FilesToExclude>
    <FilesToExclude>$(FilesToExclude);$(SourceRoot)**\bin\**\*.*</FilesToExclude>
    <FilesToExclude>$(FilesToExclude);$(SourceRoot)**\obj\**\*.*</FilesToExclude>
  </PropertyGroup>
  <ItemGroup>
    <Compile Include="$(MSBuildThisFileDirectory)AssemblyInfo.cs" />
    <Compile Include="$(SourceRoot)HashCode.Shim.cs" />
    <Compile Include="$(SourceRoot)NullableAttributes.cs" />
    <Compile Include="$(SourceRoot)Abc.Sketches\**\*.cs" Exclude="$(FilesToExclude)" />
    <Compile Include="$(SourceRoot)Abc.Testing\**\*.cs" Exclude="$(FilesToExclude)" />
    <Compile Include="$(SourceRoot)Abc.Tests\**\*.cs" Exclude="$(FilesToExclude)" />
  </ItemGroup>

  <!-- Dependencies -->
  <!-- Microsoft.Bcl.HashCode is not compatible w/ .NET Framework <= 4.6 -->
  <PropertyGroup>
    <HashCodePkg Condition=" $(TargetFramework.StartsWith('net45')) ">false</HashCodePkg>
    <HashCodePkg Condition=" $(TargetFramework) == 'net46' ">false</HashCodePkg>
  </PropertyGroup>
  <ItemGroup>
    <PackageReference Include="Abc.Maybe" Version="$(AbcVersion)" />
    <PackageReference Include="Microsoft.Bcl.HashCode" Version="1.1.0" Condition=" $(HashCodePkg) != 'false' " />
    <PackageReference Include="System.ValueTuple" Version="4.5.0" />
    <PackageReference Include="xunit" Version="2.4.1" />
    <!-- xunit.runner.console is for .NET Framework 4.5/4.5.1; otherwise we use xunit.runner.visualstudio. -->
    <PackageReference Include="xunit.runner.console" Version="2.4.1">
      <IncludeAssets>runtime; build; native; contentfiles; analyzers; buildtransitive</IncludeAssets>
      <PrivateAssets>all</PrivateAssets>
    </PackageReference>
    <PackageReference Include="xunit.runner.visualstudio" Version="2.4.1">
      <PrivateAssets>all</PrivateAssets>
      <IncludeAssets>runtime; build; native; contentfiles; analyzers; buildtransitive</IncludeAssets>
    </PackageReference>
  </ItemGroup>

</Project>
