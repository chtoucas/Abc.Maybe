<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <TargetFramework>$(MaxApiPlatform)</TargetFramework>

    <!-- BenchmarkDotNet requires that we specify an exact lang version -->
    <LangVersion>8.0</LangVersion>

    <DefineConstants Condition=" $(BenchmarkHarness) == 'true' ">$(DefineConstants);BENCHMARK_HARNESS</DefineConstants>

    <!--
      CA1822  Mark members as static
    -->
    <RelaxWarnings>true</RelaxWarnings>
    <NoWarn>$(NoWarn);CA1822</NoWarn>
  </PropertyGroup>

  <ItemGroup>
    <None Update="perf.ini">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </None>
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="BenchmarkDotNet" Version="0.12.1" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\Abc.Maybe\Abc.Maybe.csproj" />
  </ItemGroup>

</Project>
