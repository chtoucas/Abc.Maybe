<Project>

  <!--
    Strong name the assembly.
    This MUST be done rather late: Retail builds set SignAssembly to true only
    after Directory.Build.props has been loaded.
  -->
  <PropertyGroup Condition=" $(SignAssembly) == 'true' ">
    <DefineConstants>$(DefineConstants);SIGNED_ASSEMBLY</DefineConstants>
    <AssemblyOriginatorKeyFile>$(EngRoot)Abc.snk</AssemblyOriginatorKeyFile>
    <DelaySign>false</DelaySign>
  </PropertyGroup>

  <PropertyGroup Condition=" $(GenerateDocumentationFile) == 'true' ">
    <NoWarn>$(NoWarn);CS1591</NoWarn>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.CodeAnalysis.FxCopAnalyzers" Version="2.9.8">
      <PrivateAssets>all</PrivateAssets>
      <IncludeAssets>runtime; build; native; contentfiles; analyzers; buildtransitive</IncludeAssets>
    </PackageReference>
  </ItemGroup>

  <Target Name="DisplaySettingsBeforeCompile" BeforeTargets="Compile"
          Condition=" $(DisplaySettings) == 'true' ">
    <Message Text="> $(AssemblyName) for $(TargetFramework) will be SIGNED."
             Condition=" $(SignAssembly) == 'true' and $(TargetFramework) != '' "
             Importance="high" />
    <Message Text="> $(AssemblyName) for $(TargetFramework) will use EMBEDDED PDBs."
             Condition=" $(DebugType) == 'embedded' and $(TargetFramework) != '' "
             Importance="high" />
  </Target>

</Project>
