<Project>

  <PropertyGroup Condition=" $(AssemblyName.StartsWith('NETCOREAPP2_')) ">
    <DefineConstants>$(DefineConstants);NETCOREAPP2_x</DefineConstants>
  </PropertyGroup>
  <PropertyGroup Condition=" $(AssemblyName) == 'NET45' ">
    <!-- Old style project file, we must manually set these symbols -->
    <DefineConstants>$(DefineConstants);NETFRAMEWORK;$(AssemblyName)</DefineConstants>
  </PropertyGroup>

  <!-- Source files -->
  <PropertyGroup>
    <SourceDirectory>$(MSBuildThisFileDirectory)..\</SourceDirectory>
    <FilesToExclude>$(SourceDirectory)**\AssemblyInfo.cs</FilesToExclude>
    <FilesToExclude>$(FilesToExclude);$(SourceDirectory)**\bin\**\*.*</FilesToExclude>
    <FilesToExclude>$(FilesToExclude);$(SourceDirectory)**\obj\**\*.*</FilesToExclude>
  </PropertyGroup>
  <ItemGroup>
    <Compile Include="$(SourceDirectory)Abc.Sketches\**\*.cs" Exclude="$(FilesToExclude)" />
    <Compile Include="$(SourceDirectory)Abc.Testing\**\*.cs" Exclude="$(FilesToExclude)" />
    <Compile Include="$(SourceDirectory)Abc.Tests\**\*.cs" Exclude="$(FilesToExclude)" />
  </ItemGroup>

  <!-- Shims for legacy platforms -->
  <ItemGroup Condition=" $(AssemblyName.StartsWith('NETCOREAPP2_')) ">
    <Compile Include="$(MSBuildThisFileDirectory)NullableAttribute.cs" />
    <PackageReference Include="Microsoft.Bcl.HashCode" Version="1.1.0" />
  </ItemGroup>
  <ItemGroup Condition=" $(AssemblyName.StartsWith('NET4')) ">
    <!-- Might not be necessary for .NET 4.8 -->
    <Compile Include="$(MSBuildThisFileDirectory)HashCode.cs" />
  </ItemGroup>

  <!-- Core dependencies -->
  <ItemGroup>
    <PackageReference Include="Abc.Maybe" Version="1.0.0-beta4" />
    <PackageReference Include="System.ValueTuple" Version="4.5.0" />
    <PackageReference Include="xunit" Version="2.4.1" />
  </ItemGroup>

  <!--
    We can use xunit.runner.visualstudio for .NET Core 1.0+ and .NET Framework 4.5.2+,
    but for .NET Framework < 4.5.2 we must revert to xunit.runner.console.
  -->
  <ItemGroup Condition=" $(AssemblyName) != 'NET45' ">
    <PackageReference Include="xunit.runner.visualstudio" Version="2.4.1">
      <PrivateAssets>all</PrivateAssets>
      <IncludeAssets>runtime; build; native; contentfiles; analyzers; buildtransitive</IncludeAssets>
    </PackageReference>
  </ItemGroup>
  <ItemGroup Condition=" $(AssemblyName) == 'NET45' ">
    <PackageReference Include="xunit.runner.console">
      <Version>2.4.1</Version>
      <IncludeAssets>runtime; build; native; contentfiles; analyzers; buildtransitive</IncludeAssets>
      <PrivateAssets>all</PrivateAssets>
    </PackageReference>
  </ItemGroup>

</Project>
