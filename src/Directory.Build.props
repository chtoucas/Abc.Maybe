<Project>
  <!--
    Common properties for all projects.
    See https://docs.microsoft.com/en-us/visualstudio/msbuild/customize-your-build?view=vs-2019
  -->

  <PropertyGroup>
    <EngRoot>$(MSBuildThisFileDirectory)..\eng\</EngRoot>

    <Retail Condition=" '$(Retail)' != 'true' ">false</Retail>
    <!-- For retail builds, we unconditionally sign the assembly -->
    <SignAssembly Condition=" '$(Retail)' == 'true' ">true</SignAssembly>
  </PropertyGroup>

  <!-- Package metadata & assembly info.
    https://docs.microsoft.com/en-us/dotnet/core/tools/csproj#nuget-metadata-properties
    https://docs.microsoft.com/en-us/dotnet/core/tools/csproj#assemblyinfo-properties
  -->
  <PropertyGroup>
    <Authors>Chtoucas</Authors>
    <Company>Narvalo.Org</Company>
    <Product>Abc Library</Product>
    <Copyright>Copyright (c) 2020 Narvalo.Org.</Copyright>

    <PackageProjectUrl>https://github.com/chtoucas/Abc.Maybe/</PackageProjectUrl>
    <PackageLicenseExpression>BSD-2-Clause</PackageLicenseExpression>
    <PackageReleaseNotes>See CHANGELOG in project root.</PackageReleaseNotes>

    <RepositoryType>git</RepositoryType>
    <RepositoryUrl>https://github.com/chtoucas/Abc.Maybe/</RepositoryUrl>

    <!-- A fake version only used during development.
      For Retail builds, the version is set within eng\$(AssemblyName).props. -->
    <VersionPrefix>1.0.0</VersionPrefix>
    <VersionSuffix>DUMMY</VersionSuffix>
  </PropertyGroup>

  <PropertyGroup>
    <RootNamespace>Abc</RootNamespace>

    <LangVersion>latest</LangVersion>
    <!--<LangVersion>8.0</LangVersion>-->

    <CheckForOverflowUnderflow>true</CheckForOverflowUnderflow>
    <Nullable>enable</Nullable>
    <TreatWarningsAsErrors>true</TreatWarningsAsErrors>
    <!-- Analyzers by Microsoft -->
    <Features>$(Features);flow-analysis</Features>

    <!-- CONTRACTS_FULL is necessary to enable the attribute Pure -->
    <DefineConstants>$(DefineConstants);TRACE;CONTRACTS_FULL</DefineConstants>

    <!-- Optional symbols -->
    <!--<DefineConstants>$(DefineConstants);PURE_MAYBE</DefineConstants>-->
    <!--<DefineConstants>$(DefineConstants);PLAIN_LINQ</DefineConstants>-->

    <!-- Disable warnings when using a preview version of .NET Core -->
    <SuppressNETCoreSdkPreviewMessage Condition=" '$(_NETCoreSdkIsPreview)' == 'true' ">true</SuppressNETCoreSdkPreviewMessage>
  </PropertyGroup>

  <PropertyGroup Condition=" '$(Configuration)|$(Platform)' == 'Debug|AnyCPU' ">
    <TreatWarningsAsErrors>false</TreatWarningsAsErrors>
    <DefineConstants>$(DefineConstants);DEBUG</DefineConstants>
  </PropertyGroup>

  <!-- Strong name the assembly.
      https://docs.microsoft.com/en-gb/dotnet/standard/library-guidance/strong-naming
      https://github.com/dotnet/runtime/blob/master/docs/project/strong-name-signing.md
    -->
  <PropertyGroup Condition=" $(SignAssembly) == 'true' ">
    <DefineConstants>$(DefineConstants);SIGNED_ASSEMBLY</DefineConstants>
    <AssemblyOriginatorKeyFile>$(EngRoot)Abc.snk</AssemblyOriginatorKeyFile>
    <DelaySign>false</DelaySign>
  </PropertyGroup>

</Project>
