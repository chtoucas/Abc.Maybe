<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFrameworks>$(MaxApiPlatform);$(MinApiStandard)</TargetFrameworks>
  </PropertyGroup>

  <Import Project="$(EngRoot)$(AssemblyName).props" Condition=" $(Retail) == 'true' " />
  <Import Project="$(EngRoot)Retail.targets" Condition=" $(Retail) == 'true' " />

  <PropertyGroup Condition=" $(Configuration) == 'Release' ">
    <GenerateDocumentationFile>true</GenerateDocumentationFile>
    <WarningsNotAsErrors>$(WarningsNotAsErrors);CS1591</WarningsNotAsErrors>
  </PropertyGroup>

  <ItemGroup Condition=" $(TargetFramework) == $(MaxApiStandard) or $(TargetFramework) == $(MaxApiPlatform) ">
    <AdditionalFiles Include="PublicAPI\Max\PublicAPI.Shipped.txt" />
    <AdditionalFiles Include="PublicAPI\Max\PublicAPI.Unshipped.txt" />
  </ItemGroup>
  <ItemGroup Condition=" $(TargetFramework) == $(MinApiStandard) or $(TargetFramework) == $(MinApiPlatform) ">
    <AdditionalFiles Include="PublicAPI\Min\PublicAPI.Shipped.txt" />
    <AdditionalFiles Include="PublicAPI\Min\PublicAPI.Unshipped.txt" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.CodeAnalysis.PublicApiAnalyzers" Version="2.9.8">
      <PrivateAssets>all</PrivateAssets>
      <IncludeAssets>runtime; build; native; contentfiles; analyzers; buildtransitive</IncludeAssets>
    </PackageReference>
  </ItemGroup>

</Project>
