<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFrameworks>$(MaxApiPlatform);netstandard2.0</TargetFrameworks>

    <!--
      FIXME: RS0036, RS0037 and RS0041
      https://github.com/dotnet/roslyn-analyzers/blob/master/src/PublicApiAnalyzers/Microsoft.CodeAnalysis.PublicApiAnalyzers.md
    -->
    <NoWarn>$(NoWarn);RS0036</NoWarn>
  </PropertyGroup>

  <Import Project="$(EngRoot)$(AssemblyName).props" Condition=" $(Retail) == 'true' " />
  <Import Project="$(EngRoot)Retail.targets" Condition=" $(Retail) == 'true' " />

  <PropertyGroup Condition=" $(Configuration) == 'Release' ">
    <GenerateDocumentationFile>true</GenerateDocumentationFile>
    <WarningsNotAsErrors>$(WarningsNotAsErrors);CS1591</WarningsNotAsErrors>
  </PropertyGroup>

  <!-- Only enable for .NET Standard, no platform like net461 or netcoreapp3.1 -->
  <ItemGroup Condition=" $(TargetFramework) == 'netstandard2.0' ">
    <AdditionalFiles Include="PublicAPI\netstandard2.0\PublicAPI.Shipped.txt" />
    <AdditionalFiles Include="PublicAPI\netstandard2.0\PublicAPI.Unshipped.txt" />
  </ItemGroup>
  <ItemGroup Condition=" $(TargetFramework) == 'netstandard2.1' ">
    <AdditionalFiles Include="PublicAPI\netstandard2.1\PublicAPI.Shipped.txt" />
    <AdditionalFiles Include="PublicAPI\netstandard2.1\PublicAPI.Unshipped.txt" />
  </ItemGroup>

  <ItemGroup>
    <Compile Include="$(SourceRoot)MissingAttributes.cs" />
    <Compile Include="$(SourceRoot)NullableAttributes.cs" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.CodeAnalysis.PublicApiAnalyzers" Version="3.0.0">
      <PrivateAssets>all</PrivateAssets>
      <IncludeAssets>runtime; build; native; contentfiles; analyzers; buildtransitive</IncludeAssets>
    </PackageReference>
  </ItemGroup>

</Project>
