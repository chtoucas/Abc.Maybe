<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <TargetFramework>$(MaxApiPlatform)</TargetFramework>

    <!--
      IDE0039   Use local function
      IDE1006   Naming rule violation: These words must begin with upper case characters
    -->
    <RelaxWarnings>true</RelaxWarnings>
    <NoWarn>$(NoWarn);IDE0039;IDE1006</NoWarn>

    <DefineConstants>$(DefineConstants);STRICT_HASKELL</DefineConstants>
    <!--<DefineConstants>$(DefineConstants);MONADS_VIA_MAP_MULTIPLY</DefineConstants>-->
    <!--<DefineConstants>$(DefineConstants);COMONADS_VIA_MAP_COMULTIPLY</DefineConstants>-->
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="System.ValueTuple" Version="4.5.0" />
  </ItemGroup>

  <ItemGroup>
    <None Update="play.ini">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </None>
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\Abc.Maybe\Abc.Maybe.csproj" />
  </ItemGroup>

</Project>
